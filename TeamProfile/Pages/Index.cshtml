@page
@model TeamProfile.Pages.Team.IndexModel


@{
    ViewData["Title"] = "Home page";
}

<h1 style="text-align: center">Members</h1>
<br>
<br>


@{
    if (Model.teams != null)
        {
            <div>
            <table>
                @{
                    List<string> item = new List<string>();
                    foreach (var Data in Model.teams)
                    {
                        item.Add(Data.Name);
                    }
                    for (int j = 0; j < item.Count(); j=j+3)
                    {
                        <tr>
                            @{
                                for (int k = j; k < j+3; k++)
                                {
                                    if (k < item.Count())
                                    {
                                        <td>@item[k]</td>
                                    }
                                }
                            }
                        </tr>
                    }
                }
            </table>
            </div>
        }
}

<style>
    table {
        border-collapse: collapse;
        margin: 0 auto;
        text-align: center;
    }

        table td {
            padding: 1rem;
            border: 1px solid black;
        }

        table tr:first-child td {
            border-top: 0;
        }

        table tr td:first-child {
            border-left: 0;
        }

        table tr:last-child td {
            border-bottom: 0;
        }

        table tr td:last-child {
            border-right: 0;
        }

        table td:hover {
            font-size: 20px;
            color:brown;
        }
</style>