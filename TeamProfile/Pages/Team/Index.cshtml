@page
@model TeamProfile.Pages.Team.IndexModel


@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align: center">INDEX</h1>

<p>
    <a asp-page="Create"><button class="button">Add Person</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.teams[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.teams[0].JoinDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.teams[0].Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.teams[0].University)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.teams[0].Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.teams[0].Portfolio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.teams) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JoinDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.University)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Portfolio)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<style>
.button {
  display: inline-block;
  padding: 7px 15px;
  font-size: 12px;
  cursor: pointer;
  text-align: center;
  text-decoration: none;
  outline: none;
  color: #fff;
  background-color: #4CAF50;
  border: none;
  border-radius: 7px;
  box-shadow: 0 10px #999;
}

.button:hover {background-color: #3e8e41}

.button:active {
  background-color: #3e8e41;
  box-shadow: 0 3px #666;
  transform: translateY(4px);
}
</style>


<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>